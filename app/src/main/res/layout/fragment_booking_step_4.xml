<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Blank1Fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingHorizontal="35dp"
        android:text="Booking information"
        android:textColor="@color/blue"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photographer :"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/pg_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/service_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service name:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/pg_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking time :"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/booking_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:textAlignment="textEnd"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/place_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shooting place :"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/booking_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/deliveryAddress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery address"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:lines="2"
                android:textAlignment="viewEnd"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewDeliveryEmail"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service price :"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:textAlignment="textEnd"
                android:text="$ 120"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport fee :"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:textAlignment="textEnd"
                android:text="$ 5"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="Payment method :"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:textAlignment="textEnd"
                android:text="Visa"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:text="CHANGE"
                android:textColor="@color/pink"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total fee :"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:textAlignment="textEnd"
                android:text="$ 125"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>