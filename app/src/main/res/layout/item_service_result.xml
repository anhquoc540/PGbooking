<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/holder"
        android:backgroundTint="@color/blue"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:theme="@style/Widget.Material3.CardView.Filled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/banner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.3"
                android:src="@drawable/event_photo_al_2"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:drawableStart="@drawable/ic_picture_white"
                android:drawablePadding="8dp"
                android:id="@+id/tvServiceName"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/banner"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service: AAAAAAAAA"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvPhotographerName"
                android:drawableStart="@drawable/ic_cam_white"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/banner"
                app:layout_constraintTop_toBottomOf="@id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provided by: Jordan Poole"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvServicePrice"
                android:drawableStart="@drawable/ic_money_white"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/banner"
                app:layout_constraintTop_toBottomOf="@id/tvPhotographerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: 100 USD"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>